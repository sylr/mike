# -- default target ------------------------------------------------------------

dry-run::

# -- variables -----------------------------------------------------------------

prefix                  = @prefix@

APGDIFF                 = @APGDIFF@
AWK                     = @AWK@
BASENAME                = @BASENAME@
BASH                    = @BASH@
CAT                     = @CAT@
