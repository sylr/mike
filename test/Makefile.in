# -- tests ---------------------------------------------------------------------

TEST_SCRIPTS = $(wildcard t[0-9][0-9][0-9][0-9]-*.*)

all : $(TEST_SCRIPTS)

$(TEST_SCRIPTS) :
	@$(ECHO) -n "$@ ... "
	@./$@ > /dev/null && $(ECHO) OK

.PHONY : $(TEST_SCRIPTS)
